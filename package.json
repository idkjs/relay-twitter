{
  "name": "relay",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint --fix --ext .js,jsx",
    "re:build": "bsb -clean-world -make-world",
    "re:clean": "bsb -clean-world",
    "re:watch": "bsb -clean-world -make-world -w",
    "relay": "reason-relay-compiler",
    "relay:watch": "reason-relay-compiler --watch",
    "start": "react-native start",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.re": [
      "bsrefmt --in-place"
    ],
    "*.{js,jsx}": [
      "yarn prettier --write",
      "yarn lint"
    ],
    "*.{yaml,yml}": [
      "yarn prettier --write"
    ],
    "package.json": [
      "yarn prettier --write",
      "yarn sort-package-json"
    ]
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-(native|universal|navigation)-(.*)|@react-native-community/(.*)|@react-navigation/(.*)|bs-platform)"
    ]
  },
  "dependencies": {
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/native": "^5.2.6",
    "@react-navigation/stack": "^5.3.1",
    "bs-fetch": "^0.5.2",
    "graphql": "^15.0.0",
    "react": "^0.0.0-experimental-33c3af284",
    "react-dom": "^0.0.0-experimental-33c3af284",
    "react-native": "^0.61.0",
    "react-native-gesture-handler": "^1.6.1",
    "react-native-reanimated": "^1.8.0",
    "react-native-safe-area-context": "^1.0.0",
    "react-native-screens": "^2.7.0",
    "react-relay": "0.0.0-experimental-8cc94ddc",
    "reason-promise": "^1.0.2",
    "reason-react": "^0.7.0",
    "reason-react-native": "^0.61.0",
    "reason-react-navigation": "^5.0.0-beta.0",
    "reason-relay": "^0.8.3",
    "relay-compiler": "9.0.0",
    "relay-config": "9.0.0",
    "relay-runtime": "9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^0.0.5",
    "babel-jest": "^24.9.0",
    "bs-platform": "^7.0.0",
    "eslint": "^6.5.1",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "lint-staged": "^10.2.2",
    "metro-react-native-babel-preset": "^0.56.0",
    "react-test-renderer": "16.9.0",
    "sort-package-json": "^1.42.2"
  }
}
